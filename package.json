{
  "name": "z-task",
  "version": "1.0.1",
  "description": "A collaborative todo application with user authentication and project management",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "node server-production.js",
    "dev": "nodemon server.js",
    "dev:prod": "nodemon server-production.js",
    "build": "echo 'No build step required for static files'",
    "test": "echo 'No tests specified'",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "docker:build": "docker build -f Dockerfile.production -t z-task:latest .",
    "docker:up": "docker-compose -f docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f",
    "backup": "node scripts/backup.js",
    "migrate": "psql -h localhost -U ztask_user -d ztask_production -f migrations/001_initial_schema.sql"
  },
  "keywords": [
    "todo",
    "task-management",
    "collaborative",
    "web-app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
